<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 半透明的进度对话框 -->
    <style name="halfTransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item>   <!-- 背景透明   去掉背景色边框也就去掉了 -->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="UIProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget"></style>
    <style name="Widget.ProgressBar" parent="@style/Widget">
        <item name="android:maxWidth">240dp</item>
        <item name="android:maxHeight">240dp</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_logo</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="Widget.ProgressBar.ListViewHeader" parent="@style/Widget.ProgressBar">
        <item name="android:maxWidth">240dip</item>
        <item name="android:maxHeight">240dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_logo</item>
        <item name="android:indeterminateDuration">2000</item>
    </style>

    <style name="progressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_color_vertical</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>

    <style name="halfDialog.ProgressDialog" parent="@style/Widget">
        <item name="android:maxWidth">80dp</item>
        <item name="android:maxHeight">80dp</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_dialog_view_header</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
    </style>

</resources>
