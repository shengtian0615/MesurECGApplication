<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/button_bkg_red_solid_normal" />
            <stroke android:width="1.0dip" android:color="@color/button_bkg_red_stroke" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_bkg_red_solid_press" />
            <stroke android:width="1.0dip" android:color="@color/button_bkg_red_stroke" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>