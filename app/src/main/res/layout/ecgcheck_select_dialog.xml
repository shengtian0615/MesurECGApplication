<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RadioGroup android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="30dp"
        android:id="@+id/ecgcheck_selectrg">
        <RadioButton android:checked="true"
            android:button="@drawable/check_bg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/ecgcheck_select_reur"
            android:layout_marginTop="15dp"
            android:textSize="20sp"/>
        <RadioButton android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:button="@drawable/check_bg"
            android:id="@+id/ecgcheck_select_coupon"
            android:text="@string/use_conpon_bonus"
            android:layout_marginTop="8dp"
            android:textSize="20sp"/>
    </RadioGroup>

</LinearLayout>
